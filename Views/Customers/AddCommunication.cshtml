@model CommunicationHistory

<h2>Add Communication</h2>

<form asp-action="AddCommunication" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <input type="hidden" asp-for="CustomerId" value="@ViewData["CustomerId"]" />
    </div>

    <div class="form-group">
        <label asp-for="CommunicationType">Communication Type</label>
        <select asp-for="CommunicationType" class="form-control">
            <option value="Phone">Phone</option>
            <option value="Email">Email</option>
            <option value="Meet">Meet</option>
        </select>
        <span asp-validation-for="CommunicationType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CommunicationDetails">Communication Details</label>
        <textarea asp-for="CommunicationDetails" class="form-control" style="height: 100px;"></textarea>
        <span asp-validation-for="CommunicationDetails" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Add Communication</button>
    <div style="margin-top: 20px;">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>


