<body>
    <form asp-controller="Access" asp-action="SignUp" method="post">
        <h1>Sign Up</h1>
        <input type="email" placeholder="Email" asp-for="Email" required />
        <input type="password" placeholder="Password" asp-for="Password" required />
        <label>
            <input type="checkbox" asp-for="KeepLoggedIn" />
            Keep me Logged In
        </label>
        <button type="submit" class="btn btn-success">Sign Up</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <p class="error-message">@ViewData["ValidateMessage"]</p>
        }

        <p>Already have an account? <a href="/Access/Login">Login</a></p>
    </form>
</body>
